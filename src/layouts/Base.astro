---
import "../styles/global.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{title}</title>
    </head>
    <body>
        <nav class="bg-white p-4 shadow">
            <div class="max-w-4xl mx-auto flex justify-between items-center">
                <a href="/" class="text-xl font-bold text-teal-600">Ladrillos.club</a>
                <a href="/products" class="text-gray-600 hover:text-teal-600">Products</a>
            </div>
        </nav>
        <main class="max-w-4xl mx-auto px-4 py-8 prose prose-lg">
            <slot />
        </main>
    </body>
</html>