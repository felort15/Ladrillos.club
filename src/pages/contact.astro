---
import Base from "../layouts/Base.astro";
---

<Base title="Contact Us">
  <div class="max-w-2xl mx-auto py-8">
    <h1 class="text-3xl font-bold text-teal-600 mb-8 text-center">Contact Us</h1>
    
    <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
      <h2 class="text-xl font-semibold text-teal-600 mb-4">Get in Touch</h2>
      <p class="text-gray-600 mb-6">
        Have questions about our LEGO products or want to collaborate? We'd love to hear from you!
      </p>
      
      <div class="space-y-4">
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-teal-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <div>
            <p class="font-medium text-gray-800">Email</p>
            <a href="mailto:info@ladrillos.club" class="text-teal-600 hover:text-teal-700">info@ladrillos.club</a>
            <br/>
            <a href="mailto:support@ladrillos.club" class="text-teal-600 hover:text-teal-700">support@ladrillos.club</a>
          </div>
        </div>

        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-teal-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <div>
            <p class="font-medium text-gray-800">Phone</p>
            <p class="text-teal-600">+1 (555) 123-4567</p>
            <p class="text-teal-600">+1 (555) 987-6543</p>
          </div>
        </div>

        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-teal-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <div>
            <p class="font-medium text-gray-800">Office</p>
            <p class="text-gray-600">123 LEGO Street</p>
            <p class="text-gray-600">Brick City, BC 12345</p>
            <p class="text-gray-600">United States</p>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-lg p-6">
      <h2 class="text-xl font-semibold text-teal-600 mb-4">Business Hours</h2>
      <div class="space-y-2 text-gray-600">
        <p>Monday - Friday: 9:00 AM - 6:00 PM</p>
        <p>Saturday: 10:00 AM - 4:00 PM</p>
        <p>Sunday: Closed</p>
      </div>
    </div>
  </div>
</Base> 